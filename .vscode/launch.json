  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-msedge",
      "request": "launch",
      "name": "Launch Edge against localhost",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Node: Nodemon",
      "runtimeExecutable": "nodemon",
      "restart": true,
      "protocol": "inspector"
    }
  ]
}
